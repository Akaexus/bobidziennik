<table class="table">
	<thead>
	</thead>
	<tbody>
		{foreach $students as $student}
				<tr>
					<td>{$student->imie} {$student->nazwisko}</td>
					<td>
						{foreach $student->marks as $mark}
							{if $student->id === $mark->id_ucznia}
							<div>{$mark->ocena}</div>
							{/if}
						{/foreach}
					</td>
				</tr>
			{/foreach}
	</tbody>
</table>
